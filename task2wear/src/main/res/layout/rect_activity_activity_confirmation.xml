<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.ksddo.task2.ActivityConfirmation"
              tools:deviceIds="wear_square">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_title"
        android:text="te"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.wearable.view.DelayedConfirmationView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/delayed_confirmation_view_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:circle_border_color="@color/green"
            app:circle_border_width="10dp"
            app:circle_color="@color/blue"
            app:circle_padding="0dp"
            app:circle_radius="35dp"
            android:layout_weight="1"
            android:src="@drawable/reload4x"
            android:layout_row="1"
            android:layout_column="0"/>

        <android.support.wearable.view.DelayedConfirmationView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/delayed_confirmation_view_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:circle_border_color="@color/green"
            app:circle_border_width="10dp"
            app:circle_color="@color/blue"
            app:circle_padding="0dp"
            app:circle_radius="35dp"
            android:layout_weight="1"
            android:src="@drawable/x4x"
            android:layout_row="2"
            android:layout_column="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Retry"
            android:layout_row="1"
            android:layout_column="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Cancel"
            android:id="@+id/textView2"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center_vertical"/>
    </GridLayout>

        <!--
         -->

</LinearLayout>
